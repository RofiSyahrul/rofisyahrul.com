---
import Spotify from '@/shared/icons/spotify.svelte';

import Item from './components/item.astro';
---

<ul>
  <Item href='/highlights/top-tracks' label='Top Tracks'>
    <Spotify class='spotify-icon' size='70%' slot='icon' />
  </Item>
</ul>

<style>
  ul {
    display: flex;
    flex-wrap: nowrap;
    gap: 12px;
    padding: 8px 12px;
    overflow-x: auto;
  }

  .spotify-icon {
    color: var(--color-secondary-bright);
  }

  :global(.dark) .spotify-icon {
    color: var(--color-secondary-dim);
  }

  @media (min-width: 640px) {
    ul {
      padding: 0 12px;
    }
  }
</style>
