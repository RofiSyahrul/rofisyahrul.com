---
import clsx from 'clsx';

interface Props {
  class?: string;
  content: string;
}

const { class: className, content } = Astro.props;
---

<div class={clsx('rich-text', className)} set:html={content} />

<style>
  .rich-text :global(a) {
    @apply text-primary-dim;
  }

  :global(.dark) .rich-text :global(a) {
    @apply text-primary-bright;
  }

  .rich-text :global(a):hover {
    @apply underline;
  }
</style>
