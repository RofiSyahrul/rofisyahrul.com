---
import clsx from 'clsx';

interface Props {
  class?: string;
  content: string;
}

const { class: className, content } = Astro.props;
---

<div class={clsx('rich-text', className)} set:html={content} />

<style>
  .rich-text :global(a) {
    color: var(--color-primary-dim);
  }

  :global(.dark) .rich-text :global(a) {
    color: var(--color-primary-bright);
  }

  .rich-text :global(a):hover {
    text-decoration: underline;
  }
</style>
