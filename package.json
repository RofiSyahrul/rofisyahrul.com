    "clsx": "^1.1.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remix": "^1.3.5",
    "zustand": "^3.7.2"
  },
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-react": "^7.17.12",
    "@remix-run/dev": "^1.3.5",
    "@remix-run/eslint-config": "^1.3.5",
    "@remix-run/serve": "^1.3.5",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/tailwindcss": "^3.0.10",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.11",
    "dotenv": "^16.0.1",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "postcss": "^8.4.7",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "stylelint-config-recommended": "^7.0.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5"
  },
  "engines": {
    "node": ">=14"
  },
  "license": "ISC",
  "name": "rofisyahrul.com",
  "private": true,
  "scripts": {
    "build": "yarn build:css:prod && yarn build:remix",
    "build:local": "yarn clean && yarn generate-manifest && yarn build:css:prod && BUILD_ENV=local yarn build:remix",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles",
    "build:css:prod": "yarn build:css --env production",
    "clean": "rm -rf api build public/build",
    "css:watch": "yarn build:css --w",
    "dev": "concurrently -k -p \"[{name} @ {time}]\" -n \"CSS,Remix\" -c \"cyan.bold,green.bold\" \"yarn css:watch\" \"yarn dev:remix\"",
    "dev:remix": "cross-env NODE_ENV=development PORT=8765 remix dev",
    "generate-manifest": "node -r esbuild-register scripts/generate-manifest.ts",
    "postinstall": "remix setup node",
    "prebuild": "yarn generate-manifest",
    "predev": "yarn generate-manifest",
    "start:local": "PORT=9706 node -r dotenv/config node_modules/.bin/remix-serve build"
  },
  "sideEffects": false,
  "version": "0.1.0"
}
