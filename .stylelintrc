{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "tailwind",
          "layer"
        ]
      }
    ],
    "block-no-empty": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global"
        ]
      }
    ],
    "unit-allowed-list": [
      "em",
      "rem",
      "s",
      "px",
      "%",
      "deg",
      "fr",
      "vh",
      "vw"
    ]
  }
}