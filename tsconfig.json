{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "~/*": ["./app/*"],
      "@/@home/*": ["./src/components/home/*"],
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    ".eslintrc.cjs",
    ".prettierrc.cjs",
    "astro.config.mjs",
    "postcss.config.cjs",
    "remix.env.d.ts",
    "svelte.config.js",
    "tailwind.config.cjs",
    "**/*.ts",
    "**/*.tsx",
    "src/env.d.ts",
    "src/**/*.astro",
    "src/**/*.svelte"
  ]
}
